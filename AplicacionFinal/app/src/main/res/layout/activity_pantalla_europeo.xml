<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <Button
        android:text="VOLVER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="49dp"
        android:id="@+id/botonVolver" />

    <Button
        android:text="ACEPTAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/botonVolver"
        android:layout_alignStart="@+id/precio3"
        android:id="@+id/botonAceptar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/europeo"
        android:id="@+id/imageEur"
        android:layout_marginBottom="159dp"
        android:layout_above="@+id/botonVolver"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/botonVolver"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp">

        <RadioButton
            android:text="Blacksad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/black"
            android:layout_weight="1" />

        <RadioButton
            android:text="Beowulf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beowulf"
            android:layout_weight="1" />

        <RadioButton
            android:text="Los Surcos del azar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surcos"
            android:layout_weight="1" />
    </RadioGroup>

    <CheckBox
        android:text="Precio hasta 5€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precio1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/radioGroup" />

    <CheckBox
        android:text="Precio mayor de 20€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/precio2"
        android:layout_alignEnd="@+id/precio2"
        android:id="@+id/precio3"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignStart="@+id/precio2" />

    <CheckBox
        android:text="Precio de 6 a 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precio2"
        android:layout_below="@+id/precio1"
        android:layout_alignStart="@+id/precio1" />

</RelativeLayout>