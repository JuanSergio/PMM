<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantalla_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/sky"
    tools:context="juansergio.aplicacionfinal.PantallaRegistro">
    //android:background="@drawable/main"



    <TextView
        android:text="Usuario"
        android:textSize="40dp"
        android:textColor="@color/colorNegro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:id="@+id/Usuario" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/EntradaNombre"
        android:hint="usuario" />
    <TextView
        android:text="Password"
        android:textColor="@color/colorNegro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/Password"
        android:layout_below="@+id/RegistroNombre"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_alignStart="@+id/Nombre" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/EntradaPassword"
        android:hint="password" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Registrarse"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BotonRegistro" />

        <Button
            android:text="Login"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BotonAceptar"
            android:layout_marginLeft="150dp" />

    </LinearLayout>
</LinearLayout>
